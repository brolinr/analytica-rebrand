<main class="mx-auto py-10">
  <%= link_to admin_root_path, class: "m-4 w-full md:w-1/5 px-8 mx-auto rounded hover:bg-blue-600 py-2 bg-blue-500 text-white", id: "next-button" do %>
    Back to dashbooard
  <% end %>
  <%= link_to admin_root_path, class: "mx-5 m-4 w-full md:w-1/5 px-8 mx-auto rounded hover:bg-blue-600 py-2 bg-blue-500 text-white", id: "next-button" do %>
    Back to onboardings
  <% end %>
  <div class="grid grid-cols-1 md:grid-cols-6 gap-2 p-4 mx-auto">
    <% if @company_onboarding.pending_review? %>
      <div class="md:hidden block md:col-span-1 py-2 text-center">
        <%= form_with(model: @company_onboarding, url: approve_company_onboarding_path(@company_onboarding), html: { method: :post, data: { turbo: false } })do |f| %>
          <%= f.hidden_field :approval, value: 'approved' %>
          <%= f.submit 'Approve', class: 'text-center w-4/5 mx-auto capitalize rounded hover:bg-blue-600 py-2 bg-blue-500 text-white' %>
        <% end %>

        <div class="w-full p-2 bg-amber-100 my-2 rounded-lg text-left">
          <h3 class="text-md font-semibold leading-7 text-gray-900 mb-2">Disapprove</h3>
          <%= form_with(model: @company_onboarding, url: approve_company_onboarding_path(@company_onboarding), html: { method: :post, data: { turbo: false } })do |f| %>
            <%= f.hidden_field :approval, value: 'disapproved' %>
            <%= f.label :reason_for_disapproval, class: 'text-sm' %>
            <%= f.text_area :reason_for_disapproval, class: 'text-sm h-20 w-full appearance-none border border-slate-300 bg-slate-50 rounded' %>
            <%= f.submit 'Disaprove', class: 'text-center w-3/5 mx-auto capitalize rounded hover:bg-amber-600 py-2 bg-amber-500 text-white' %>
          <% end %>
        </div>
      </div>
    <% end %>

    <div class="shadow-lg md:col-span-5 p-2 md:p-6 shadow-lg rounded-lg w-full mx-auto mx-auto">
      <div class="px-4 sm:px-0">
        <h3 class="text-2xl font-semibold leading-0 text-gray-900">Company Information</h3>
        <p class="mt-1 max-w-2xl text-sm leading-0 text-gray-500">Company details and company documents.</p>
      </div>
      <div class="mt-6 border-t border-gray-100">
        <dl class="divide-y divide-gray-100">
          <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
            <dt class="text-sm font-medium leading-6 text-gray-900">Company name</dt>
            <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0 capitalize"><%= @company_onboarding.name %></dd>
          </div>
          <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
            <dt class="text-sm font-medium leading-6 text-gray-900">Email address</dt>
            <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0"><%= @company_onboarding.email %></dd>
          </div>
          <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
            <dt class="text-sm font-medium leading-6 text-gray-900">Phone</dt>
            <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0"><%= @company_onboarding.phone %></dd>
          </div>
          <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
            <dt class="text-sm font-medium leading-6 text-gray-900">Address</dt>
            <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0"><%= @company_onboarding.address %></dd>
          </div>
          <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
            <dt class="text-sm font-medium leading-6 text-gray-900">City</dt>
            <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0"><%= @company_onboarding.city %></dd>
          </div>
          <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
            <dt class="text-sm font-medium leading-6 text-gray-900">Terms</dt>
            <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0">
              <%= @company_onboarding.terms? ? 'Agreed' : 'Disagreed' %>
            </dd>
          </div>
          <% if @company_onboarding.about.present? %>
            <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
              <dt class="text-sm font-medium leading-6 text-gray-900">About</dt>
              <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0">
                <%= @company_onboarding.about %>
              </dd>
            </div>
          <% end %>
          <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
            <dt class="text-sm font-medium leading-6 text-gray-900">Application status</dt>
            <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0">
              <div class="flex items-center capitalize">
                <% case @company_onboarding.approval %>
                <% when 'pending_review' %>
                  <div class="h-2.5 w-2.5 rounded-full bg-blue-500 me-2"></div>
                <% when 'approved' %>
                  <div class="h-2.5 w-2.5 rounded-full bg-green-500 me-2"></div>
                <% when 'disapproved' %>
                  <div class="h-2.5 w-2.5 rounded-full bg-rose-500 me-2"></div>
                <% end %>
                <%= @company_onboarding.approval.split('_').join(' ') %>
              </div>
            </dd>
          </div>
          <% if @company_onboarding.disapproved? %>
            <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
              <dt class="text-sm font-medium leading-6 text-gray-900">Reason for disaproval</dt>
              <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0">
                <%= @company_onboarding.reason_for_disapproval %>
              </dd>
            </div>
          <% end %>
          <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
            <dt class="text-sm font-medium leading-6 text-gray-900">Documents</dt>
            <dd class="mt-2 text-sm text-gray-900 sm:col-span-2 sm:mt-0">
              <ul role="list" class="divide-y divide-gray-100 rounded-md border border-gray-200">
                <li class="flex items-center justify-between py-4 pl-4 pr-5 text-sm leading-6">
                  <div class="flex w-0 flex-1 items-center">
                    <svg class="h-5 w-5 flex-shrink-0 text-gray-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                      <path fill-rule="evenodd" d="M15.621 4.379a3 3 0 00-4.242 0l-7 7a3 3 0 004.241 4.243h.001l.497-.5a.75.75 0 011.064 1.057l-.498.501-.002.002a4.5 4.5 0 01-6.364-6.364l7-7a4.5 4.5 0 016.368 6.36l-3.455 3.553A2.625 2.625 0 119.52 9.52l3.45-3.451a.75.75 0 111.061 1.06l-3.45 3.451a1.125 1.125 0 001.587 1.595l3.454-3.553a3 3 0 000-4.242z" clip-rule="evenodd" />
                    </svg>
                    <div class="ml-4 flex min-w-0 flex-1 gap-2">
                      <span class="truncate font-medium">certificate_of_incorporation.pdf</span>
                      <span class="flex-shrink-0 text-gray-400">2.4mb</span>
                    </div>
                  </div>
                  <div class="ml-4 flex-shrink-0">
                    <a href="#" class="font-medium text-indigo-600 hover:text-indigo-500" data-bs-toggle="modal" data-bs-target="#certificate_of_incorporation">Inspect</a>
                    <%= render 'shared/pdf_reader', data: {
                      document_title: 'Certificate of incorporation Document',
                      pdf_path: rails_blob_path(@company_onboarding.certificate_of_incorporation),
                      modal_id: 'certificate_of_incorporation'
                    } %>
                  </div>
                </li>
                <li class="flex items-center justify-between py-4 pl-4 pr-5 text-sm leading-6">
                  <div class="flex w-0 flex-1 items-center">
                    <svg class="h-5 w-5 flex-shrink-0 text-gray-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                      <path fill-rule="evenodd" d="M15.621 4.379a3 3 0 00-4.242 0l-7 7a3 3 0 004.241 4.243h.001l.497-.5a.75.75 0 011.064 1.057l-.498.501-.002.002a4.5 4.5 0 01-6.364-6.364l7-7a4.5 4.5 0 016.368 6.36l-3.455 3.553A2.625 2.625 0 119.52 9.52l3.45-3.451a.75.75 0 111.061 1.06l-3.45 3.451a1.125 1.125 0 001.587 1.595l3.454-3.553a3 3 0 000-4.242z" clip-rule="evenodd" />
                    </svg>
                    <div class="ml-4 flex min-w-0 flex-1 gap-2">
                      <span class="truncate font-medium">tax_clearance.pdf</span>
                      <span class="flex-shrink-0 text-gray-400">4.5mb</span>
                    </div>
                  </div>
                  <div class="ml-4 flex-shrink-0">
                    <a href="#" class="font-medium text-indigo-600 hover:text-indigo-500" data-bs-toggle="modal" data-bs-target="#tax_clearence_document">Inspect</a>
                    <%= render 'shared/pdf_reader', data: {
                      document_title: 'Tax Clearence Document',
                      pdf_path: rails_blob_path(@company_onboarding.tax_clearance),
                      modal_id: 'tax_clearence_document'
                    } %>
                  </div>
                </li>
                <li class="flex items-center justify-between py-4 pl-4 pr-5 text-sm leading-6">
                  <div class="flex w-0 flex-1 items-center">
                    <svg class="h-5 w-5 flex-shrink-0 text-gray-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                      <path fill-rule="evenodd" d="M15.621 4.379a3 3 0 00-4.242 0l-7 7a3 3 0 004.241 4.243h.001l.497-.5a.75.75 0 011.064 1.057l-.498.501-.002.002a4.5 4.5 0 01-6.364-6.364l7-7a4.5 4.5 0 016.368 6.36l-3.455 3.553A2.625 2.625 0 119.52 9.52l3.45-3.451a.75.75 0 111.061 1.06l-3.45 3.451a1.125 1.125 0 001.587 1.595l3.454-3.553a3 3 0 000-4.242z" clip-rule="evenodd" />
                    </svg>
                    <div class="ml-4 flex min-w-0 flex-1 gap-2">
                      <span class="truncate font-medium">cr_5.pdf</span>
                      <span class="flex-shrink-0 text-gray-400">4.5mb</span>
                    </div>
                  </div>
                  <div class="ml-4 flex-shrink-0">
                    <a href="#" class="font-medium text-indigo-600 hover:text-indigo-500" data-bs-toggle="modal" data-bs-target="#cr5">Inspect</a>
                    <%= render 'shared/pdf_reader', data: {
                      document_title: 'CR5 Document',
                      pdf_path: rails_blob_path(@company_onboarding.cr5),
                      modal_id: 'cr5'
                    } %>
                  </div>
                </li>
                <li class="flex items-center justify-between py-4 pl-4 pr-5 text-sm leading-6">
                  <div class="flex w-0 flex-1 items-center">
                    <svg class="h-5 w-5 flex-shrink-0 text-gray-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                      <path fill-rule="evenodd" d="M15.621 4.379a3 3 0 00-4.242 0l-7 7a3 3 0 004.241 4.243h.001l.497-.5a.75.75 0 011.064 1.057l-.498.501-.002.002a4.5 4.5 0 01-6.364-6.364l7-7a4.5 4.5 0 016.368 6.36l-3.455 3.553A2.625 2.625 0 119.52 9.52l3.45-3.451a.75.75 0 111.061 1.06l-3.45 3.451a1.125 1.125 0 001.587 1.595l3.454-3.553a3 3 0 000-4.242z" clip-rule="evenodd" />
                    </svg>
                    <div class="ml-4 flex min-w-0 flex-1 gap-2">
                      <span class="truncate font-medium">cr6.pdf</span>
                      <span class="flex-shrink-0 text-gray-400">4.5mb</span>
                    </div>
                  </div>
                  <div class="ml-4 flex-shrink-0">
                    <a href="#" class="font-medium text-indigo-600 hover:text-indigo-500" data-bs-toggle="modal" data-bs-target="#cr6">Inspect</a>
                    <%= render 'shared/pdf_reader', data: {
                      document_title: 'CR^ Document',
                      pdf_path: rails_blob_path(@company_onboarding.cr6),
                      modal_id: 'cr6'
                    } %>
                  </div>
                </li>
              </ul>
            </dd>
          </div>
        </dl>
      </div>
    </div>
    <% if @company_onboarding.pending_review? %>
      <div class="hidden md:block md:col-span-1 py-2 ">
        <%= form_with(model: @company_onboarding, url: approve_company_onboarding_path(@company_onboarding), html: { method: :post, data: { turbo: false } })do |f| %>
          <%= f.hidden_field :approval, value: 'approved' %>
          <%= f.submit 'Approve', class: 'text-center w-4/5 mx-auto capitalize rounded hover:bg-blue-600 py-2 bg-blue-500 text-white' %>
        <% end %>

        <div class="w-full p-2 bg-amber-100 my-2 rounded-lg ">
          <h3 class="text-md font-semibold leading-7 text-gray-900 mb-2">Disapprove</h3>
          <%= form_with(model: @company_onboarding, url: approve_company_onboarding_path(@company_onboarding), html: { method: :post, data: { turbo: false } })do |f| %>
            <%= f.hidden_field :approval, value: 'disapproved' %>
            <%= f.label :reason_for_disapproval, class: 'text-sm' %>
            <%= f.text_area :reason_for_disapproval, class: 'text-sm h-20 w-full appearance-none border border-slate-300 bg-slate-50 rounded' %>
            <%= f.submit 'Disaprove', class: 'text-center w-3/5 mx-auto capitalize rounded hover:bg-amber-600 py-2 bg-amber-500 text-white' %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</main>

