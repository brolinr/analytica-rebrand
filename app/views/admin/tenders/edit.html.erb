<%= stylesheet_link_tag "application", media: "all" %>
<%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>

<% content_for(:title) { t("administrate.actions.edit_resource", name: page.page_title) } %>


<header class="mb-4 w-full p-4 flex justify-between border">
  <div class="text-2xl font-bold leading-3 flex items-center">
    <h1>
      <%= content_for(:title) %>
    </h1>
  </div>

  <div class="flex flex-row gap-x-2">
    <%= link_to(
      t("administrate.actions.show_resource", name: page.page_title),
      [namespace, page.resource],
      class: "button",
    ) if accessible_action?(page.resource, :show) %>
  </div>
</header>

<section class="main-content__body ">
  <%= render "form", page: page %>
</section>
