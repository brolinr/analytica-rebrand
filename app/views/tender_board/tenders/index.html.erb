<div class="grid grid-cols-5 gap-1 h-screen overflow-scroll-y-auto">
  <div id="menu" class="hidden w-3/5 md:w-2/5 lg:w-1/5 bg-slate-200 p-2 grid grid-cols-1 h-screen overflow-hidden gap-2">
    <div class="sticky w-full bg-slate-200 p-2 rounded-lg grid grid-cols-5 gap-3">
      <div class="bg-white col-span-4 p-4 rounded-full text-slate-600"></div>
      <div class="bg-white col-span-1 p-4 rounded-full text-slate-600 duration-300 hover:bg-slate-300"></div>
    </div>
    <div class="h-screen overflow-scroll overflow-scroll-x-auto gap-3 grid grid-cols-1">
      <% @tenders.each do |tender| %>
        <%= link_to tender_board_tender_path(tender), data: { "turbo-frame": "content" } do %>
          <div class="bg-white p-2 rounded-lg hover:bg-slate-100 tile">
            <h1 class="text-2xl font-bold mb-1.5"><%= tender.title %><h1>
            <p class="text-sm text-slate-600 leading-5">
              <%= tender.description.to_plain_text.truncate(100) %>
            <p>
            <div class="mt-2 p-1 gap-2 flex overflow-scroll overflow-scroll-x-auto">
              <% tender.tags.each do |tag| %>
                <div class="px-2 rounded bg-slate-200">
                  <span class="text-center text-sm tracking-tighter font-bold leading-3" ><%= tag.title %></span>
                </div>
              <%end%>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
  
  <div class="col-span-5" id="content-bar">
    <%= turbo_frame_tag "content", src: tender_board_tender_path(@tenders&.first || '') %>
  </div>
</div>