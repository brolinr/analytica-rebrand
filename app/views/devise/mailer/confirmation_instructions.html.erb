<style>
    .main {
        box-shadow: 0 1px 3px 0 rgb(0 0 0 / 0.1), 0 1px 2px -1px rgb(0 0 0 / 0.1);
        border-radius: 5px;
        box-shadow: 10px;
        margin: 0;
        padding: 10px;
        box-sizing: border-box;
        font-family: Arial, Helvetica, sans-serif;
        width: 100%;
        height: 250px;
        object-fit: cover;
    }
    .header {
        background-color: #2682df;
        border-radius: 5px;
        margin: 0 auto;
        max-width: 100%;
    }

    .header img {
        max-width: 100%;
        max-height: 50%;
        display: block;
        margin: 0 auto;
        border-radius: 5px;
    }
</style>
<div class="main">
  
  <div>
    <h1 style="color: #2682df; font-weight: bold;">
