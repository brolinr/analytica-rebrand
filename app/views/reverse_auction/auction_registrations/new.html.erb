<%= render \
      'shared/breadcrumb',
      paths: [
        { name: 'auctions', link: reverse_auction_auctions_path },
        { name: @auction.title.truncate(10), link: reverse_auction_auction_path(@auction) },
        { name: 'Register' }
      ]
%>

<div class="w-full lg:w-3/5 mx-auto shadow-lg p-2 rounded-lg border my-5">
  <h1 class="text-2xl font-bold border-b border-slate-800 pb-1.5">Company information</h1>
  <%= form_with model: @auction_registration, url: reverse_auction_auction_auction_registrations_path(@auction), method: :post, data: {turbo: false} do |f| %>
    <%= f.fields_for :company do |company_form| %>
      <div class="grid grid-cols-1gap-4 my-4">
        <dt class="text-sm font-medium leading-6 text-gray-900">
          <%= company_form.label :name, class: 'text-base font-medium' %>
          <%= company_form.text_field :name, value: @auction_registration.company.name, disabled: true, class: 'w-full rounded focus:bg-blue-100 border-slate-300 p-2' %>
        </dt>

        <dt class="text-sm font-medium leading-6 text-gray-900">
          <%= company_form.label :email, class: 'text-base font-medium' %>
          <%= company_form.text_field :email, value: @auction_registration.company.email, disabled: true, class: 'w-full rounded focus:bg-blue-100 border-slate-300 p-2' %>
        </dt>
      <% end %>
      <h1 class="text-2xl font-bold border-b border-slate-800 my-4 pb-1.5">Delivery information</h1>
      <dt class="text-sm font-medium leading-6 text-gray-900">
        <%= f.label :delivery_city, class: 'text-base font-medium' %>
        <%= f.text_field :delivery_city, value: @auction_registration.company.city || '', class: 'w-full rounded focus:bg-blue-100 border-slate-300 p-2' %>
      </dt>

      <dt class="text-sm font-medium leading-6 text-gray-900">
        <%= f.label :delivery_address, class: 'text-base font-medium' %>
        <%= f.text_field :delivery_address, value: @auction_registration.company.address || '', class: 'w-full rounded focus:bg-blue-100 border-slate-300 p-2' %>
      </dt>
      <dt class="text-sm font-medium leading-6 text-gray-900">
        <%= f.label :delivery_phone, class: 'text-base font-medium' %>
        <%= f.text_field :delivery_phone, value: @auction_registration.company.phone || '', class: 'w-full rounded focus:bg-blue-100 border-slate-300 p-2' %>
      </dt>

      <dt class="text-sm font-medium leading-6 my-4 text-gray-900">
        <%= f.check_box :terms, class: 'h-4 w-4 rounded border-gray-600 text-blue-500 focus:ring-0' %>
        <%= f.label :terms, 'I have read and agree to the General Conditions of Sale , Terms of Use and Privacy Policy.', class: 'text-sm ml-2' %>
      </dt>
      <div class="w-full mb-7">
        <%= f.submit "Register", class: "w-full py-2 capitalize rounded hover:bg-blue-600 bg-blue-500 text-white" %>
      </div>
    </div>
  <% end %>
</div>